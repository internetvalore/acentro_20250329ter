---
import { getLangFromUrl, useTranslations } from '../i18n/ui';
import ServiceCard from './ServiceCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="services">
  <div class="container">
    <h2>{t('services.title')}</h2>
    <div class="services-grid">
      <ServiceCard 
        title={t('services.cameraCommercio')} 
        description={t('services.cameraCommercio.desc')} 
        icon="/images/service-icon-1.svg" 
        link="/pratiche-camera-commercio"
      />
      <ServiceCard 
        title={t('services.revenue')} 
        description={t('services.revenue.desc')} 
        icon="/images/service-icon-2.svg" 
        link="/pratiche-agenzia-entrate"
      />
      <ServiceCard 
        title={t('services.inps')} 
        description={t('services.inps.desc')} 
        icon="/images/service-icon-3.svg" 
        link="/pratiche-inps"
      />
      <ServiceCard 
        title={t('services.municipality')} 
        description={t('services.municipality.desc')} 
        icon="/images/service-icon-1.svg" 
        link="/pratiche-comune"
      />
      <ServiceCard 
        title={t('services.cadastral')} 
        description={t('services.cadastral.desc')} 
        icon="/images/service-icon-2.svg" 
        link="/pratiche-catastali"
      />
      <ServiceCard 
        title={t('services.digital')} 
        description={t('services.digital.desc')} 
        icon="/images/service-icon-3.svg" 
        link="/servizi-digitali"
      />
      <ServiceCard 
        title={t('services.professional')} 
        description={t('services.professional.desc')} 
        icon="/images/service-icon-1.svg" 
        link="/servizi-professionisti"
      />
      <ServiceCard 
        title={t('services.trademark')} 
        description={t('services.trademark.desc')} 
        icon="/images/service-icon-2.svg" 
        link="/registrazione-marchi"
      />
      <ServiceCard 
        title={t('services.digipram')} 
        description={t('services.digipram.desc')} 
        icon="/images/service-icon-3.svg" 
        link="/digipram"
      />
    </div>
    <div class="services-cta">
      <p>{t('services.cta.text')}</p>
      <a href="/contattaci" class="btn">{t('services.cta.button')}</a>
    </div>
  </div>
</section>

<style>
  .services {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--primary-color);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .services-cta {
    text-align: center;
    margin-top: 3rem;
  }

  .services-cta p {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: var(--secondary-color);
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: var(--primary-color);
  }
</style>
